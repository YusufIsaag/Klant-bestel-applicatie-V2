@page
@model KE03_INTDEV_SE_1_Base.Pages.Afrekenen.Afrekenen3Model
@{
    ViewData["Title"] = "Bestelling ontvangen";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h2><i class="bi bi-check-circle-fill"></i> Bestelling ontvangen!</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h3 class="text-success mb-4">Bedankt voor je bestelling</h3>

                    <p class="lead">Je bestelling is succesvol ontvangen en wordt verwerkt.</p>

                    <div class="mt-5">
                        <form method="Post" asp-page-handler="VerderWinkelen">
                            <button type="submit" class="btn btn-primary">  <i class="bi bi-house-door"></i> Verder winkelen </button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>